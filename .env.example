# Django Configuration
SECRET_KEY=your-secret-key-here-generate-with-django-get-secret-key
DEBUG=True

# Database Configuration (optional - defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Google OAuth Configuration (optional)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id-here
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret-here

# Google Gemini AI (optional - falls back to mock if not set)
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration (Production only - SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:5173

# Celery Configuration (optional - defaults to redis://localhost:6379/0)
CELERY_BROKER=redis://localhost:6379/0

# Google Cloud Storage Configuration (optional - defaults to local storage)
USE_GCS=False
# GS_BUCKET_NAME=your-bucket-name
# GS_PROJECT_ID=your-project-id
# GS_CREDENTIALS=path-to-service-account-json-file-or-base64-encoded-json

# Railway Configuration (optional - auto-detected in Railway environment)
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
# RAILWAY_STATIC_URL=https://your-app.railway.app
